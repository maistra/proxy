load("@bazel_skylib//:bzl_library.bzl", "bzl_library")
load(
    ":toolchains.bzl",
    "declare_constraints",
)

package(default_visibility = ["//visibility:public"])

declare_constraints()

filegroup(
    name = "all_rules",
    srcs = glob(["*.bzl"]),
    visibility = ["//visibility:public"],
)

filegroup(
    name = "all_files",
    testonly = True,
    srcs = glob(["**"]),
    visibility = ["//visibility:public"],
)

bzl_library(
    name = "toolchains",
    srcs = ["toolchains.bzl"],
    deps = [
        "@io_bazel_rules_go//go/private:platforms",
        "@io_bazel_rules_go//go/private:sdk",
    ],
)
