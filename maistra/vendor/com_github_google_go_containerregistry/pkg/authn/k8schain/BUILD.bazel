load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "k8schain",
    srcs = [
        "doc.go",
        "k8schain.go",
        "k8schain_aws.go",
        "k8schain_azure.go",
        "k8schain_gcp.go",
