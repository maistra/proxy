load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "compare",
    srcs = [
        "doc.go",
        "image.go",
        "index.go",
        "layer.go",
    ],
    importpath = "github.com/google/go-containerregistry/internal/compare",
    visibility = ["//:__subpackages__"],
    deps = [
        "//pkg/v1:pkg",
        "//pkg/v1/types",
    ],
)

alias(
    name = "go_default_library",
    actual = ":compare",
    visibility = ["//:__subpackages__"],
)

go_test(
    name = "compare_test",
    srcs = [
        "image_test.go",
        "index_test.go",
        "layer_test.go",
    ],
    embed = [":compare"],
    deps = [
        "//pkg/v1/mutate",
        "//pkg/v1/random",
        "//pkg/v1/types",
    ],
)
