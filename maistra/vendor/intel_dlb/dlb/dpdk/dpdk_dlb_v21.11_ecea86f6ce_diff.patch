+	ret = rte_mp_action_register(DLB2_MP_RESET_COMPLETE,
+				     dlb2_reset_complete_cb);
+	if (ret && rte_errno != EEXIST)
+		goto dlb2_reset_complete_cb_failed;
+
+	return 0;
+
+dlb2_reset_complete_cb_failed:
+	rte_mp_action_unregister(DLB2_MP_DO_RESET);
+
+	return -rte_errno;
+}
