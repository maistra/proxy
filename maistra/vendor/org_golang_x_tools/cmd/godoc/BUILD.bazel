go_binary(
    name = "godoc",
    embed = [":go_default_library"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "go_default_test",
    srcs = ["godoc_test.go"],
    embed = [":go_default_library"],
    deps = [
        "//go/packages/packagestest:go_default_library",
        "//internal/testenv:go_default_library",
    ],
)
