load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

go_library(
    name = "stringer_lib",
    srcs = ["stringer.go"],
    importpath = "golang.org/x/tools/cmd/stringer",
    visibility = ["//visibility:private"],
    deps = ["//go/packages"],
)

go_binary(
    name = "stringer",
    embed = [":stringer_lib"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "stringer_test",
    srcs = [
        "endtoend_test.go",
        "golden_test.go",
        "util_test.go",
    ],
    embed = [":stringer_lib"],
    deps = ["//internal/testenv"],
)
