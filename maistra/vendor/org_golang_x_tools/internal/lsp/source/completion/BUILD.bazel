load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "completion",
    srcs = [
        "builtin.go",
        "completion.go",
        "deep_completion.go",
        "format.go",
        "keywords.go",
        "labels.go",
        "literal.go",
        "package.go",
        "printf.go",
        "snippet.go",
        "statements.go",
        "util.go",
    ],
    importpath = "golang.org/x/tools/internal/lsp/source/completion",
    visibility = ["//:__subpackages__"],
    deps = [
        "//go/ast/astutil",
        "//internal/event",
        "//internal/imports",
        "//internal/lsp/debug/tag",
        "//internal/lsp/diff",
        "//internal/lsp/fuzzy",
