load("//rust:defs.bzl", "rust_binary", "rust_library", "rust_test")

package(default_visibility = ["//visibility:public"])

rust_library(
    name = "hello_lib",
    srcs = [
        "src/greeter.rs",
        "src/lib.rs",
    ],
    data = ["greeting.txt"],
    edition = "2018",
    deps = ["//tools/runfiles"],
)

rust_binary(
    name = "hello_world",
    srcs = ["src/main.rs"],
    edition = "2018",
    deps = [":hello_lib"],
)

rust_test(
    name = "hello_lib_test",
    crate = ":hello_lib",
)
